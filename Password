public class Main {

    public static void main(String[] args) throws IOException {
            Main password=new Main();
        Random r=new Random();

        for (int i = 0; i < 8; i++){
            int rNumber=r.nextInt(3);
            switch (rNumber){
                case 0:
                    password.UpperCase();
                    break;
                case 1:
                    password.LowerCase();
                    break;
                case 2:
                    password.Number();
                    break;
        }
    }
            }

    private void Number() {
        Random r=new Random();
        int rNumber=r.nextInt(10);
        System.out.print(rNumber);
    }

    public void UpperCase(){
    String myString = "abcdefghijklmnopqrstuyxvz";
    Random randomNumber = new Random();
        for (int i = 0; i < 1; i++) {
        int rNumber = randomNumber.nextInt(myString.length());
        Character character = myString.charAt(rNumber);
        System.out.print(Character.toUpperCase(character));

    }
}
    public void LowerCase(){
        String myString = "abcdefghijklmnopqrstuyxvz";
        Random randomNumber = new Random();
        for (int i = 0; i < 1; i++) {
            int rNumber = randomNumber.nextInt(myString.length());
            Character character = myString.charAt(rNumber);
            System.out.print(Character.toLowerCase(character));
}
    }

}
